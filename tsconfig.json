{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"src/typings/**/*.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"vite.config.*",
		"build/**/*.ts",
		"mock/**/*.ts",
		".env-config.ts",
	],
	"exclude": [
		"/dist/**",
		"node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"types": ["node","unplugin-icons/types/vue","naive-ui/volar"]
	}
}

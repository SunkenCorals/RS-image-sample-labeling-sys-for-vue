{
	"extends": "@vue/tsconfig/tsconfig.web.json",
	"include": [
		"src/typings/**/*.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"mock/**/*.ts",
		"build/**/*.ts",
		".env-config.ts",
	],
	"exclude": [
		"/dist/**",
		"node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"~/*": ["./*"]
		},
		"types": ["naive-ui/volar"]
	},
	"references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
